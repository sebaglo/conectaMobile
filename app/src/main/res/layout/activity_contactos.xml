<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/etBarraContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar contactos"
        android:padding="12dp"
        android:inputType="text"
        android:drawableStart=""
        android:drawablePadding="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/barra_busqueda"
        android:layout_alignParentTop="true" />

    <!-- Lista de contactos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaContactos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/etBarraContacto"
        android:padding="8dp"
        android:clipToPadding="false"
        android:layout_above="@id/btnAgregarContacto" />

    <!-- Botón de agregar -->

    <Button
        android:id="@+id/btnAgregarContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:drawableStart=""
        android:drawablePadding="8dp"
        android:text="Agregar Contacto"
        android:textColor="@color/white" />

    <!--Boton editar-->
    <Button
        android:id="@+id/btneditarcontacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="14dp"
        android:backgroundTint="@color/black"
        android:drawableStart=""
        android:drawablePadding="8dp"
        android:text="Editar Contacto"
        android:textColor="@color/white" />

</RelativeLayout>
