<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Conectamobile"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true">

        <!-- Configura Main_Bienvenida como la actividad principal -->
        <activity
            android:name=".Main_Bienvenida"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".Main_registrar"/>
        <activity android:name=".MainPerfil"/>
        <activity android:name=".MainEditar"/>
        <activity android:name=".agregar"/>
        <activity android:name=".MainContactos"/>
        <activity android:name=".Main_login" />
    </application>

</manifest>
